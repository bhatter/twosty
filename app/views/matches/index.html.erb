<div class="container">
  <div class="match-index-label">
    <br>
    <br>
    <br>
    <h1 >Choose your date</h1>
  </div>

  <div id="MagicCarousel" class="carousel slide" data-ride="true" data-interval="false">
    <div class="carousel-inner">
      <% @matching_requests.each_with_index do |matched_request, index| %>
        <div class="carousel-item <%= "active" if index == 0 %>" >
          <div class="link">
            <%= link_to meetings_path(request_id: @request.id, matched_request_id: matched_request.id), method: :post do  %>
              <div class="match-index-card-picture">
                <%= cl_image_tag matched_request.user.photo.url, class: "cl-photo" %>
              </div>
              <div class="match-index-card-text-name">
                  <%= matched_request.user.first_name %>,
                  <%= matched_request.user.age %>
              </div>
              <div class="match-index-card-text-restaurant">
                ` <h1><%= matched_request.restaurant&.name %></h1>
                  <br>
                  <p> <%= matched_request.restaurant&.address %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

    <a class="carousel-control-prev" href="#MagicCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#MagicCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>

  <div class="match-index-or">
    <h2> Didn't find a match?</h2>
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>

  <div id="RestCarousel" class="carousel slide" data-ride="true" data-interval="false">
    <div class="carousel-inner">
      <% @restaurants.each_with_index do |restaurant, index| %>
        <div class="carousel-item <%= "active" if index == 0 %>" >
          <div class="link">
            <%= link_to request_path(id: @request.id, restaurant_id: restaurant.id), method: :put do  %>
              <div class="match-index-card-picture">
                <%= cl_image_tag restaurant.photo.url, class: "cl-photo" %>
              </div>
              <div class="match-index-card-text-restaurant">
                ` <h1><%= restaurant.name %></h1>
                  <br>
                  <p> <%= restaurant.address %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

    <a class="carousel-control-prev" href="#RestCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#RestCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    </div>
  </div>
