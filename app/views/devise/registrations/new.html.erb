<div class="full-screen" style="background-image: url(https://images.unsplash.com/photo-1499721297526-536718e770ba?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);">
  <div class="parallax">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="section">
      <%= f.error_notification %>
      <h2>Sign up</h2>
      <!-- <div class="form-inputs"> -->
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" }%>
        <%= f.input :password,
        required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
        required: true,
        input_html: { autocomplete: "new-password" } %>
        <%= image_tag "arrow_down.svg", class: "ct-btn-scroll scroll_down_btn" %>
      </div>
      <div class="section" style="margin-bottom: 70px">
        <%= image_tag "arrow_up.svg", class: "ct-btn-scroll scroll_up_btn" %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :date_of_birth , :as => :date, :start_year => Date.today.year - 12,
        :end_year => 1900,
        :order => [ :day, :month, :year], :required => true %>
        <%= f.input :gender, :as => :radio_buttons, :collection => User.genders.keys %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= image_tag "arrow_down.svg", class: "ct-btn-scroll scroll_down_btn" %>
      </div>
      <div class="section" style="margin-bottom: 140px">
        <%= image_tag "arrow_up.svg", class: "ct-btn-scroll scroll_up_btn" %>
        <%= f.input :age_preference_from %>
        <%= f.input :age_preference_to %>
        <%= f.input :gender_preference, :as => :radio_buttons, :collection => User.gender_preferences.keys %>
        <!--      </div> -->
        <%= f.button :submit, "Sign up", class: "btn btn-success" %>
        <%= f.button :submit, "Update", class: "btn btn-success" %>
        <% end %>
        <%= render "devise/shared/links" %>
        <!-- </div> -->
      </div>
    </div>
  </div>
