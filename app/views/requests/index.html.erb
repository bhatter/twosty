      <div class="tab-content clearfix">
        <div class="tab-pane active" id="1a">
          <ul>
            <%= @requests.each do |request| %>
            <li> list all the upcoming confirmed dates <%= request.cuisine.name %> </li>
            <% end %>
          </ul>
        </div>
        <div class="tab-pane" id="2a">
          <h3>list all the upcoming pending requests</h3>
        </div>
        <div class="tab-pane" id="3a">
          <h3>list all the past dates and requests</h3>
        </div>
      </div>
  </div>


