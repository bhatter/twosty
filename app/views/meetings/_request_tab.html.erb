<% if request.restaurant %>
<div class="entry-container">
  <div class="entry">
    <div class="restaurant-image-request" style="background-image: url('<%= cl_image_path request&.restaurant&.photo&.url %>')">
    </div>
    <div class="text d-inline">
      <div>
        <span class="time"><%= request.meeting_date.strftime("%A, %b %d") %> at
          <span class="title"> </span> <%= request&.restaurant&.name %> </span>
          <span class="address"> <%= request&.restaurant&.address %></span>
        </div>
        <%= link_to "Cancel request", request_path(request), method: :delete %>
      </div>
    </div>
  </div>
  <% end %>
