
<div class="container"><h1> My Dates Dashboard </h1></div>
<div id="exTab1" class="container">
  <ul  class="nav nav-pills">
    <li class="active">
      <a  href="#1a" data-toggle="tab">My confirmed Dates</a>
    </li>
    <li><a href="#2a" data-toggle="tab">History</a>
    </li>
  </ul>

  <div class="tab-content clearfix">
    <div class="tab-pane active" id="1a">
      <ul>
        <% @meetings.each do |meeting| %>
        <% if (meeting.chosen_request.meeting_date >= Date.today) %>
        <li> <%= cl_image_tag meeting.chosen_request.user.photo.url(:find_face), class: "avatar avatar-bordered" %> &nbsp &nbsp <%= meeting.chosen_request.user.first_name %> &nbsp &nbsp <%= meeting.chosen_request.meeting_date %>  </li>
          <% end %>
          <% end %>
        </ul>
      </div>
      <div class="tab-pane" id="2a">
        <ul>
          <% @meetings.each do |meeting| %>
          <% unless (meeting.chosen_request.meeting_date >= Date.today) %>
          <li> <%= cl_image_tag meeting.chosen_request.user.photo.url(:find_face), class: "avatar avatar-bordered" %> &nbsp &nbsp <%= meeting.chosen_request.user.first_name %> &nbsp &nbsp <%= meeting.chosen_request.meeting_date %>  </li>
            <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
