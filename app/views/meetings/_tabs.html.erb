
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Next Dates</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">History</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Requests</a>
  </li>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <% @meetings.each do |meeting| %>
      <% if (meeting.requests.first.meeting_date >= Date.today) %>
        <div class="entry-container">
          <div class="entry">
            <% if meeting.other_user_request(current_user).user.photo&.url %>
              <%= cl_image_tag meeting.other_user_request(current_user).user.photo.url(:find_face_small), class: "profile-face text d-inline" %>
            <% end %>
            <div class="text d-inline">
              <span class="time text d-inline"><%= meeting.other_user_request(current_user).meeting_date.strftime("%A, %b %d") %> </span>
              <div>
                <span class="title text d-inline">Meet <span class="name text d-inline"><%= meeting.other_user_request(current_user).user.first_name %> </span> at <%= meeting.restaurant.name %> </span>
                <span class="address"> <%= meeting.restaurant.address %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <% @meetings.each do |meeting| %>
      <% unless (meeting.requests.first.meeting_date > Date.today) %>
        <div class="entry-container">
          <div class="entry">
            <% if meeting.other_user_request(current_user).user.photo&.url %>
            <%= cl_image_tag meeting.other_user_request(current_user).user.photo.url(:find_face_small), class: "profile-face text d-inline" %>
            <% end %>
            <div class="text d-inline">
              <span class="time text d-inline"><%= meeting.other_user_request(current_user).meeting_date.strftime("%A, %b %d") %> </span>
              <div>
                <span class="title text d-inline">Meet <span class="name text d-inline"><%= meeting.other_user_request(current_user).user.first_name %> </span> at <%= meeting.restaurant.name %> </span>
                <span class="address"> <%= meeting.restaurant.address %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
    <% @requests.each do |request| %>
      <% if (request.meeting_date >= Date.today) %>
        <div class="entry-container">
          <div class="entry">
            <%= cl_image_tag request.restaurant.photo.url, class: "d-inline" %>
            <div class="text d-inline">
              <div>
                <span class="title text d-inline">Meet <span class="name text d-inline"> </span> <%= meeting.restaurant.name %> </span>
                <span class="address"> <%= meeting.restaurant.address %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
