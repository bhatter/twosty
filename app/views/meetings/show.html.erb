<h1>Meeting <%= @meeting.id %></h1>

<div
  id="map"
  style="width: 30%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<h3>Message</h3>
<%= simple_form_for [@meeting, @message] do |f| %>
  <%= f.input :content %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>

<% @meeting.messages.each do |message| %>
  <div>
    <%= message.user.first_name %>: <%= message.content %>
  </div>
<% end %>
