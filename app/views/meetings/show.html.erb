<div class="container">

  <h1>Congratulations <%= current_user.first_name %>!</h1>

  <p>You'll be meeting <%= @meeting.other_user_request(current_user).user.first_name %></p>

  <p>On <%= @meeting.requests.first.meeting_date %></p>

  <p>At the restaurant <%= @restaurant.name %> </p>
  <p><%= @restaurant.address %></p>

  <div
    id="map"
    style="width: 30%;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>


  <h3>Message <%=  %></h3>
    <%= simple_form_for [@meeting, @message] do |f| %>
    <%= f.input :content %>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>

  <% @meeting.messages.each do |message| %>
  <div>
    <%= message.user.first_name %>: <%= message.content %>
  </div>
  <% end %>

</div>
