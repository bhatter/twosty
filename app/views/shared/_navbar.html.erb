<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo_twosty.svg", height: 50 %>
  <% end %>

<!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_signed_in? %>
          <% if current_user.photo.url %>
            <%= cl_image_tag current_user.photo.url(:find_face), class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag 'nopictavatar.svg', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>


          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path(current_user) do %> &nbsp <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %> &nbsp <%= t(".settings", default: "My Dates") %>

              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %> &nbsp <%= t(".sign_out", default: "Logout") %>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <% if user_signed_in? %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to edit_user_registration_path(current_user) do %> &nbsp <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %> &nbsp <%= t(".settings", default: "My Dates") %>

            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %> &nbsp <%= t(".sign_out", default: "Logout") %>
            <% end %>
          </li>
        </ul>
      <% end %>
      </div>
    </div>
  </div>
