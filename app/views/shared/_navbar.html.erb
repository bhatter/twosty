<!-- Avatar with dropdown menu -->
    <% if current_page?(meetings_path || meeting_path) %>
    <div class="navbar-on-the-top">
      <%= image_tag "logo_twosty.svg", height: 50, class: "dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
    <% else %>
    <div class="navbar">
      <%= image_tag "logo_twosty.svg", height: 50, class: "dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>
      <% end %>
      <div id="sidebar">
          <% if user_signed_in? %>
              <ul style="list-style: none; padding: 0", class="text-menu">
                <div class='profile-menu'>
                  <%= cl_image_tag(current_user.photo.url(:find_face), class: "profile-face-big" ) %>
                  <li>
                     <h1>Hello<br> <%= current_user.first_name %>!</h1>
                      </li>


                </div>
                <li>
               <%= link_to root_path do %><%= t(".home", default: "Home") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to meetings_path do %><%= t(".settings", default: "My Dates") %>

                  <% end %>
                </li>
                <li>
                  <%= link_to new_request_path do %><%= t(".findadate", default: "Find A Date") %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "Edit Profile",edit_user_registration_path(current_user) %>
                </li>


                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %><%= t(".sign_out", default: "Logout") %>
                  <% end %>
                </li>
              </ul>
          <% else %>
            <ul style="list-style: none;", class="text-menu">
              <li>
                <%= link_to new_user_session_path do %><%= t(".login", default: "Login") %>
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %><%= t(".register", default: "Register") %>
                <% end %>
              </li>
              <li>
                <%= link_to root_path do %><%= t(".home", default: "Home") %>
                <% end %>
              </li>

            </ul>
        <% end %>
      </div>
    </div>


